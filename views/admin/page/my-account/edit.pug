extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
    h1(class = "mb-4") Chỉnh sửa thông tin cá nhân 
    +alert-success("3000")
    +alert-error("3000")
    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method = "post"
        enctype="multipart/form-data"
    ) 
        div(class="form-group")
            label(for= "fullName") Họ tên *
            input(
                type="text" 
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=user.fullName
            )
        div(class="form-group")
            label(for= "email") Email *
            input(
                type="email" 
                class="form-control"
                id="email"
                name="email"
                required
                value=user.email
            )
        div(class="form-group")
            label(for="password") Password *
            input(
                type="password" 
                class="form-control"
                id="password"
                name="password"
                
            )
        div(class="form-group")
            label(for= "phone") Phone *
            input(
                type="text" 
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
            )
        div(
            class="form-group"
             upload-image
            )
            label(for= "avatar") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=user.avatar
                upload-image-preview
                class="image-preview"
            )
        div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Sửa

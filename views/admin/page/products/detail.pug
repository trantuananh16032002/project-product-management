extends ../../layouts/default.pug

block main
  
  h1.mb-4 Chi tiết sản phẩm 

  if product.title
    h1.mb-4
      b #{product.title}

  if product.price
    div.mb-4 Giá: 
      b #{product.price}

  if product.discountPercentage
    div.mb-4 Giảm giá: 
      b #{product.discountPercentage}

  if product.stock
    div.mb-4 Còn lại: 
      b #{product.stock}

  if product.thumbnail
    div.mb-4
      img(
        src=product.thumbnail
        style="width: 100px"
      )

  if product.status
    div.mb-4
      span Trạng thái: 
      if product.status == "active"
        span.badge.badge-success Hoạt động
      else 
        span.badge.badge-danger Ngưng hoạt động

  if product.position
    div.mb-4 Vị trí: 
      b #{product.position}

  if product.description
    div.mb-4 !{product.description}

  script(src="/admin/js/products.js")
